{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@babel/preset-env": "^7.0.0-beta.56",
    "autoprefixer": "^9.1.0",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "classnames": "^2.2.6",
    "cssnano-cli": "^1.0.5",
    "eslint": "^5.4.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#1774343f6226052a46b081e01db3fca8793cc9f1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "sass-basis": "^9.1.1",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0"
  },
  "scripts": {
    "clean:zip": "rimraf snow-monkey-awesome-custom-blocks.zip",
    "build": "npm-run-all -p css js",
    "prepublish": "npm run build",
    "lint": "./node_modules/.bin/eslint .", 
    "minify:css:front": "cssnano dist/css/blocks.css dist/css/blocks.min.css --no-zindex",
    "minify:css:editor": "cssnano dist/css/blocks-editor.css dist/css/blocks-editor.min.css --no-zindex",
    "css:front:sass": "node-sass --include-path=node_modules/node-normalize-scss src/css/blocks.scss -o dist/css",
    "css:front:postcss": "postcss dist/css/blocks.css -r --no-map -c=postcss.config.js",
    "css:editor:sass": "node-sass --include-path=node_modules/node-normalize-scss src/css/blocks-editor.scss -o dist/css",
    "css:editor:postcss": "postcss dist/css/blocks.css -r --no-map -c=postcss.config.js",
    "css:front": "npm-run-all -s css:front:sass css:front:postcss && npm run minify:css:front",
    "css:editor": "npm-run-all -s css:editor:sass css:editor:postcss && npm run minify:css:editor",
    "css": "npm-run-all -p css:front css:editor",
    "js": "webpack src/js/blocks.js -o dist/js/blocks-build.js --config webpack.config.js",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/bin' --exclude='package*.json' . snow-monkey-awesome-custom-blocks && cd snow-monkey-awesome-custom-blocks && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-awesome-custom-blocks.zip snow-monkey-awesome-custom-blocks",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive",
    "sync-sm-css": "rimraf src/css/core && cp -r ../../themes/snow-monkey/resources/src/css/core ./src/css/core && rimraf src/css/core/_core.scss"
  }
}
